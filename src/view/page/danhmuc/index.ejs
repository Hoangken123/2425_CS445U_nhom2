<div class="container mt-4">
    <h2 class="text-center">Quản Lý Danh Mục Thuốc</h2>

    <!-- Thanh tìm kiếm -->
    <div class="d-flex justify-content-between align-items-center my-4">
        <input id="search-input" type="text" class="form-control w-75" placeholder="Tìm kiếm danh mục thuốc...">
        <button id="add-button" class="btn btn-success ms-2" data-bs-toggle="modal" data-bs-target="#addModal">Thêm Mới</button>
    </div>

    <!-- Bảng danh sách danh mục -->
    <table class="table table-bordered table-hover">
        <thead class="table-light">
            <tr>
                <th class="text-center">#</th>
                <th>Tên</th>
                <th>Mô Tả</th>
                <th class="text-center">Hành Động</th>
            </tr>
        </thead>
        <tbody id="category-table">
            <!-- Nội dung danh mục sẽ được điền từ JS -->
        </tbody>
    </table>

    <!-- Phân trang -->
    <div id="pagination" class="d-flex justify-content-center mt-3"></div>
</div> 

